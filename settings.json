/* 
   use Surendar Yama Extension Pack.
*/
{
  "editor.fontFamily": "operator mono lig",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "typescript": "typescript"
  },
  "tailwindCSS.experimental.classRegex": [
    ":\\s*?[\"'`]([^\"'`]*).*?,",
    ["classList.(?:add|remove)\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    "(?:const|let|var)\\s+[\\w$_][_\\w\\d]*\\s*=\\s*['\\\"](.*?)['\\\"]",
    [
      "(?:\\b(?:const|let|var)\\s+)?[\\w$_]*(?:[Ss]tyles|[Cc]lasses|[Cc]lassnames)[\\w\\d]*\\s*(?:=|\\+=)\\s*['\"]([^'\"]*)['\"]"
    ],
    ["Styles\\s*(?::\\s*[^=]+)?\\s*=\\s*([^;]*);", "['\"`]([^'\"`]*)['\"`]"]
  ],
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "tailwindCSS.emmetCompletions": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "editor.minimap.enabled": false,
  "editor.lineHeight": 3.5,
  "editor.linkedEditing": true,
  "editor.cursorStyle": "block",
  "editor.fontSize": 13,
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#ffff00",
    "terminalCursor.foreground": "#ffff00",
    "editorSuggestWidget.background": "#2E073F",
    "editorSuggestWidget.selectedBackground": "#e52165",
    "editorSuggestWidget.highlightForeground": "#ffff00"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "text.html",
          "source.ini",
          "source.pug",
          "source.css",
          "source.scss",
          "source.js",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "source.json",
          "source.svelte",
          "source.vue",
          "source.astro"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "variable.other.property.js",
          "variable.other.object.property.js",
          "variable.other.readwrite.alias.js",
          "meta.block.js",
          "meta.import.js",
          "source.js",
          "variable.other.property.ts",
          "variable.other.object.property.ts",
          "variable.other.readwrite.alias.ts",
          "meta.block.ts",
          "meta.import.ts",
          "source.ts"
        ],
        "settings": {
          "foreground": "#fb923c"
        }
      },
      {
        "scope": [
          "meta.import.js",
          "entity.name.function.js",
          "source.js",
          "meta.import.ts",
          "entity.name.function.ts",
          "source.ts"
        ],
        "settings": {
          "foreground": "#fecc1b"
        }
      },
      {
        "scope": [
          "punctuation.definition.string.begin.js",
          "punctuation.definition.string.end.js",
          "string.quoted.double.js",
          "punctuation.definition.string.begin.ts",
          "punctuation.definition.string.end.ts",
          "string.quoted.double.ts"
        ],
        "settings": {
          "foreground": "#a3e635"
        }
      },
      {
        "scope": ["string", "punctuation"],
        "settings": {
          "foreground": "#a3e635"
        }
      },
      {
        "scope": [
          "punctuation.support.type.property-name.begin.json.comments",
          "punctuation.support.type.property-name.end.json.comments",
          "support.type.property-name.json.comments",
          "string.json.comments",
          "meta.structure.dictionary.json.comments",
          "meta.structure.dictionary.value.json.comments",
          "meta.structure.dictionary.json.comments",
          "source.json.comments"
        ],
        "settings": {
          "foreground": "#C792EA"
        }
      },
      {
        "scope": ["source.ini"],
        "settings": {
          "foreground": "#C792EA"
        }
      },
      {
        "scope": ["keyword.other.definition.ini"],
        "settings": {
          "foreground": "#fecc1b"
        }
      },
      {
        "scope": [
          "meta.var.expr.ts",
          "storage.type.ts",
          "storage.type.class.ts",
          "meta.class.ts",
          "entity.name.type.alias.ts",
          "meta.type.declaration.ts",
          "source.ts",
          "storage.type.js",
          "meta.var.expr.js",
          "storage.type.class.js",
          "meta.class.js",
          "source.js"
        ],
        "settings": {
          "foreground": "#fb923c"
        }
      }
    ]
  },
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.fontLigatures": true,
  "git.autofetch": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.linux": "bash",
  "workbench.startupEditor": "none",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "css.lint.unknownAtRules": "ignore",
  "window.zoomLevel": 1,
  "editor.guides.bracketPairs": true,
  "workbench.colorTheme": "surendar",
  "workbench.iconTheme": "vscode-icon-theme",
  "workbench.sideBar.location": "right",
  "terminal.integrated.lineHeight": 1.8,
  "terminal.integrated.fontSize": 13,
  "apc.font.family": "operator mono lig",
  "apc.activityBar": {
    "position": "bottom",
    "size": 30,
    "itemSize": 30,
    "itemMargin": 10
  },
  "apc.listRow": {
    "lists": ["explorer-folders-view", "quick-input-list", "results"],
    "height": 30,
    "fontSize": 13
  },
  "files.autoSave": "afterDelay",
  "update.mode": "manual"
}
